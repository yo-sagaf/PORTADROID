<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AproposActivity" >
 
     <TextView
         android:id="@+id/abt_txt"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:fontFamily="Century"
         android:gravity="center"
         android:text="@string/apropos_txt"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:textColor="#001280"
         android:textSize="20sp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/twitter_70x70"
        android:onClick="tweet"
        android:id="@+id/twitter"
        android:background="@null"
        android:layout_alignBottom="@+id/instagram"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/instagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/abt_txt"
        android:layout_toRightOf="@+id/etudiant"
        android:background="@null"
        android:onClick="insta"
        android:src="@drawable/instagram_70x70" />

    <ImageButton
        android:id="@+id/facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/instagram"
        android:layout_toLeftOf="@+id/etudiant"
        android:layout_toStartOf="@+id/abt_txt"
        android:background="@null"
        android:onClick="fb"
        android:src="@drawable/facebook_70x70" />

    <ImageView
        android:id="@+id/etudiant"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/abt_txt"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:src="@drawable/ardudroid" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/facebook"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/etudiant"
        android:fontFamily="Century"
        android:gravity="center"
        android:text="@string/texte_txt"
        android:textColor="#001280"
        android:textSize="19sp" />

</RelativeLayout>
